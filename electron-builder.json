{
  "appId": "com.example.transcribe2",
  "productName": "AudioTranscribe",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "src/python/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg", "zip"],
    "icon": "assets/icon.icns"
  },
  "extraResources": [
    {
      "from": "src/python",
      "to": "python",
      "filter": ["**/*"]
    }
  ]
}